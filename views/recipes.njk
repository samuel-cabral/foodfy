{% extends "layout.njk" %}

{% block title %}
  <title>{{wrapper.company}}
    | Receitas</title>
{% endblock title %}

{% block content %}
  <div class="cards">
    {% for item in items %}
      <div class="card" id="{{ loop.index }}">
        <div class="card-image-container">
          <img src="{{item.image}}" alt="Imagem de {{item.title}}">
        </div>
        <div class="card-content">
          <h1>{{item.title}}</h1>
          <p>por
            {{item.author}}</p>
        </div>
      </div>
    {% endfor %}

