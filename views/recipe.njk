{% extends "layout.njk" %}

{% block header %}
  <header class="header">
    <a href="/">
      <img src="{{assets.logo}}" alt="Foodfy"/>
    </a>
    <a id="about" href="/about">Sobre</a>
    <a id="recipes" href="/recipes">
      <strong>Receitas</strong>
    </a>
  </header>
{% endblock header %}

{% block content %}
  <div class="recipe-image-container">
    <img src="{{item.image}}" alt="Imagem de {{item.title}}">
  </div>

  <div class="recipe-content">
    <h1>{{item.title}}</h1>
    <p>por {{item.author}}</p>
  </div>

  <section class="ingredients-content">
    <div class="title-section">
      <h2>Ingredientes</h2>
      <button>Esconder</button>
    </div>

    <div class="show-content">
      {% for variable in iterator %}
        <li>{{ingredients}}</li>
      {% endfor %}
    </div>

  </section>
{% endblock content %}

{% block scripts %}
  <script src="scripts/hideShow.js"></script>
{% endblock scripts %}